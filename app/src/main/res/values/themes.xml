<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.TripTales" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/secondary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="popupMenuBackground">@color/white_dark</item>
        <item name="popupMenuStyle">@style/PopupMenuStyle</item>

    </style>


    <style name="ThemeOverlay.TripTales.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>


    <style name="nightModeSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/dark_gray</item>
    </style>

    <style name="notSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/light_brown2</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:colorForeground">@color/dark_gray</item>
    </style>
</resources>