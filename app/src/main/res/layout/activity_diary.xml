<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutDiary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.diario.DiaryActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            android:background="@color/primary"
            app:menu="@menu/top_app_bar"
            app:navigationIcon="@drawable/baseline_menu_24"
            app:title="@string/app_name"
            app:titleCentered="true" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            android:backgroundTint="@color/white"
            app:tabIndicatorFullWidth="true"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabIndicatorColor="@color/background_dark">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tappeFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabTappe" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/expensesFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabSpese" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/obiettiviFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabObiettivi" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/checkListFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tabCheckList" />

        </com.google.android.material.tabs.TabLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/appbarlayout" />

    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container_diary"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</androidx.constraintlayout.widget.ConstraintLayout>