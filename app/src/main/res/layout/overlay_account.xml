<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardAccount"
    android:layout_width="210dp"
    android:layout_height="192dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="10dp"
    android:backgroundTint="@color/white_dark"
    app:cardCornerRadius="20dp"
    android:elevation="100dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/modPsw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white_dark"
                android:text="@string/modifica_password"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/modEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white_dark"
                android:text="@string/modifica_email"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="18dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/eliminaProfilo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white_dark"
                android:text="@string/elimina_profilo"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textAlignment="textStart"
                android:textSize="18dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>