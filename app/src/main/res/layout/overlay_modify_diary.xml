<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.homepage.HomepageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#EBEBEB"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nome Diario -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">


                    <ImageButton
                        android:id="@+id/backModifyDiaryButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:src="@drawable/baseline_arrow_back_ios_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:text="Aggiungi Diario"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/buttonSaveDiaryChanges"
                        android:layout_width="83dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="26dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded_button"
                        android:backgroundTint="@color/secondary"
                        android:text="@string/saveButton"
                        android:textAllCaps="false"
                        android:textColor="@color/white" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/nome_diario"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDiaryNameChanges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Inserisci il nome" />

                <!-- Data Partenza -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Data partenza"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <!-- Data Arrivo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFieldDayDepartureChanges"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hintDay"
                        android:paddingHorizontal="16dp"
                        app:boxBackgroundColor="@color/background_overlays"
                        app:boxStrokeColor="@color/background_dark"
                        app:cursorColor="@color/secondary"
                        app:errorEnabled="true"
                        app:helperTextEnabled="true"
                        app:hintTextColor="@color/background_dark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputDayDepartureChanges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="/"
                        android:textSize="20sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFieldMonthDepartureChanges"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hintMonth"
                        android:paddingHorizontal="16dp"
                        app:boxBackgroundColor="@color/background_overlays"
                        app:boxStrokeColor="@color/background_dark"
                        app:cursorColor="@color/secondary"
                        app:errorEnabled="true"
                        app:helperTextEnabled="true"
                        app:hintTextColor="@color/background_dark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputMonthDepartureChanges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="/"
                        android:textSize="20sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFieldYearDepartureChanges"
                        style="?attr/textInputFilledStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="@string/hintYear"
                        android:paddingHorizontal="16dp"
                        app:boxBackgroundColor="@color/background_overlays"
                        app:boxStrokeColor="@color/background_dark"
                        app:cursorColor="@color/secondary"
                        app:errorEnabled="true"
                        app:helperTextEnabled="true"
                        app:hintTextColor="@color/background_dark">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputYearDepartureChanges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:text="Data arrivo"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFieldReturnDayChanges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hintDay"
                        android:paddingHorizontal="16dp"
                        app:boxStrokeColor="@color/background_dark"
                        app:hintTextColor="@color/background_dark"
                        app:cursorColor="@color/secondary"
                        style="?attr/textInputFilledStyle"
                        app:boxBackgroundColor="@color/background_overlays"
                        app:errorEnabled="true"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputReturnDayChanges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="/"
                        android:textSize="20sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFieldReturnMonthChanges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/hintMonth"
                        android:paddingHorizontal="16dp"
                        app:boxStrokeColor="@color/background_dark"
                        app:hintTextColor="@color/background_dark"
                        app:cursorColor="@color/secondary"
                        style="?attr/textInputFilledStyle"
                        app:boxBackgroundColor="@color/background_overlays"
                        app:errorEnabled="true"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputReturnMonthChanges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="/"
                        android:textSize="20sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textFieldReturnYearChanges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="@string/hintYear"
                        android:paddingHorizontal="16dp"
                        app:boxStrokeColor="@color/background_dark"
                        app:hintTextColor="@color/background_dark"
                        app:cursorColor="@color/secondary"
                        style="?attr/textInputFilledStyle"
                        app:boxBackgroundColor="@color/background_overlays"
                        app:errorEnabled="true"
                        app:helperTextEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/inputReturnYearChanges"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Seleziona immagine -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Scegli un’immagine"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonChooseImageChanges"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#333333"
                    android:text="Files"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageViewSelectedChanges"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Immagine selezionata"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <!-- Buttons -->

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
