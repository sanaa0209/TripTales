<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView android:layout_width="120dp"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginEnd="10dp"
    android:backgroundTint="@color/primary"
    android:focusable="true"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/anteprimaImmagineCard"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/nomeTappaCard"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/anteprimaImmagineCard"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="@string/nome_tappa_card"
                android:textColor="@color/black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/dataTappaCard"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/anteprimaImmagineCard"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:visibility="gone"
                android:textSize="13sp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
