<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/light_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:strokeColor="@color/light_gray"
    app:strokeWidth="3dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:checkedIcon="@drawable/baseline_check_box_24"
    app:checkedIconSize="0dp"
    app:checkedIconTint="@color/white"
    app:checkedIconMargin="21dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goalNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:text="@string/prova_goal_descrizione"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/goalDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:text="@string/spesaDescription"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:clickable="false"
                android:focusable="false" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginVertical="5dp"
            app:cardBackgroundColor="@color/secondary"
            app:cardCornerRadius="20dp"
            android:checkable="true"
            android:clickable="false"
            android:focusable="false">

            <CheckBox
                android:id="@+id/cardGoalCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:buttonTint="@color/background_dark"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>


