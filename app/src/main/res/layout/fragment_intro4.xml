<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF2F2"
    tools:context=".ui.intro.fragment.Intro4Fragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:layout_marginBottom="380dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/intro4_title"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:text="@string/intro4_body"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="0dp"
        app:srcCompat="@drawable/img_intro4"
        />

    <ImageButton
        android:id="@+id/nextButtonIntro4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button_intro"
        android:backgroundTint="@color/orange2"
        android:src="@drawable/baseline_arrow_back_ios_24_small" />

    <Button
        android:id="@+id/backButtonIntro4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/custom_button_intro"
        android:backgroundTint="@color/orange2"
        android:text="@string/inizia"
        android:textColor="@color/black"
        />



</FrameLayout>