<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Base.Theme.TripTales"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLayoutSpese"
    tools:context=".ui.diario.fragment.SpeseFragment">

    <LinearLayout
        android:id="@+id/linearLayoutCheckList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="19dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="item1"/>

        <CheckBox
            android:id="@+id/checkbox_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:checkedState="indeterminate"
            android:text="item parent"/>

        <LinearLayout
            android:id="@+id/checkbox_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_child_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="item"/>

            <CheckBox
                android:id="@+id/checkbox_child_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="item"/>

            <CheckBox
                android:id="@+id/checkbox_child_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="item"/>


            <CheckBox
                android:id="@+id/checkbox_child_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="item"/>

        </LinearLayout>

    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addItemButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="35dp"
        app:rippleColor="@color/light_gray"
        android:contentDescription="@string/addItemButtonDescription"
        android:elevation="4dp"
        android:src="@drawable/round_add_24"
        app:tint="@color/black"
        android:backgroundTint="@color/white_dark"
        android:background="@drawable/rounded_button"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutCheckList"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>