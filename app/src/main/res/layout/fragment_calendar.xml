<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.homepage.fragment.CalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="19dp"
        android:orientation="vertical">

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:headerColor="@color/icon_bg_color"
            app:todayLabelColor="@color/secondary"
            app:headerLabelColor="@color/text_reverse"
            app:selectionColor="@color/secondary"
            app:pagesColor="@color/icon_bg_color"
            app:daysLabelsColor="@color/text_reverse"
            app:abbreviationsLabelsColor="@color/text_reverse"
            app:abbreviationsBarColor="@color/icon_bg_color"
            app:forwardButtonSrc="@drawable/baseline_arrow_forward_ios_24"
            app:previousButtonSrc="@drawable/baseline_arrow_back_ios_24_small"
            android:focusable="true"
            android:clickable="true"/>

    </LinearLayout>

</RelativeLayout>

