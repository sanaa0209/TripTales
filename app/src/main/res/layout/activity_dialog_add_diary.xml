<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".ui.homepage.DialogAddDiaryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="#EBEBEB"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Nome Diario -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/nome_diario"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputDiaryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Inserisci il nome" />

                <!-- Data Partenza -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Data partenza"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="GG/MM/AAAA"
                    android:inputType="date" />

                <!-- Data Arrivo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Data arrivo"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="GG/MM/AAAA"
                    android:inputType="date" />

                <!-- Seleziona immagine -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Scegli un’immagine"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/buttonChooseImage"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="8dp"
                    android:backgroundTint="#333333"
                    android:text="Files"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:id="@+id/imageViewSelected"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="Immagine selezionata"
                    android:scaleType="centerCrop"
                    android:visibility="gone" /> <!-- L'immagine sarà nascosta inizialmente -->


                <!-- Buttons inside the CardView -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical|end"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp">

                    <Button
                        android:id="@+id/buttonCancel"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Cancella"
                        android:textColor="#000000"
                        app:backgroundTint="#FFFFFF" />

                    <Button
                        android:id="@+id/buttonSave"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="Salva"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#B57F63" />
                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

