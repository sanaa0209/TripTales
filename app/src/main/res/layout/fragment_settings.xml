<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliderLayoutSettings1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.settings.fragment.SettingsFragment"
    android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="60dp"
            android:paddingBottom="55dp">

                <TextView
                    android:id="@+id/nome_cognome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nome_user_momentaneo"
                    android:textSize="22sp" />

                <Button
                    android:id="@+id/ModificaProfiloButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-15dp"
                    android:layout_marginBottom="0dp"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:text="@string/modifica_profilo"
                    android:textColor="@color/dark_gray" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/nightModeIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/moon_img"
                        android:background="@drawable/round_back_night_mode"
                        android:padding="9dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="@string/modalita_scura"
                        android:layout_toEndOf="@+id/nightModeIcon"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchNightMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:switchMinWidth="50dp"
                        android:theme="@style/nightModeSwitch"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:padding="2dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/accountIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/account_img"
                        android:background="@drawable/round_back_primary"
                        android:padding="9dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="@string/account"
                        android:layout_toEndOf="@+id/accountIcon"/>
                    <ImageButton
                        android:id="@+id/AccountButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:backgroundTint="@color/icon_bg_color"
                        android:background="@drawable/rounded_button"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        app:rippleColor="@color/light_gray"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/linguaIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/lingua_img"
                        android:background="@drawable/round_back_primary"
                        android:padding="9dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="@string/lingua"
                        android:layout_toEndOf="@+id/linguaIcon"/>
                    <ImageButton
                        android:id="@+id/LinguaButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:backgroundTint="@color/icon_bg_color"
                        android:background="@drawable/rounded_button"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        app:rippleColor="@color/light_gray"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/aboutUsIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/about_us_img"
                        android:background="@drawable/round_back_primary"
                        android:padding="9dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="@string/about_us"
                        android:layout_toEndOf="@+id/aboutUsIcon"/>
                    <ImageButton
                        android:id="@+id/AboutUsButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:backgroundTint="@color/icon_bg_color"
                        android:background="@drawable/rounded_button"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        app:rippleColor="@color/light_gray"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/logoutIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/baseline_logout_24"
                        android:background="@drawable/round_back_tertiary"
                        android:padding="9dp">
                    </ImageView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerVertical="true"
                        android:text="@string/action_logout"
                        android:layout_toEndOf="@+id/logoutIcon"/>
                    <ImageButton
                        android:id="@+id/LogoutButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="2dp"
                        android:backgroundTint="@color/icon_bg_color"
                        android:background="@drawable/rounded_button"
                        android:src="@drawable/baseline_arrow_forward_ios_24"
                        app:rippleColor="@color/light_gray"/>
                </RelativeLayout>

            </LinearLayout>


</LinearLayout>
